<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/layout_statics_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:clickable="true"
        android:descendantFocusability="blocksDescendants"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/rotate_arrow_toright"
            android:padding="@dimen/padding_small"
            android:textColor="@android:color/darker_gray"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/stats"
            android:gravity="center_vertical"
            android:padding="@dimen/padding_small"
            android:text="STATISTICS"
            android:textColor="@android:color/darker_gray" />

    </RelativeLayout>

    <View
        android:id="@+id/layout_seperatoe"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_below="@+id/layout_statics_back"
        android:background="@android:color/darker_gray" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_survey_detail_submit"
        android:layout_below="@+id/layout_seperatoe"
        android:background="@android:color/white">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_survey_detail_qts_one"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_small"
                android:background="@android:color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_qts_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small"
                    android:gravity="left"
                    android:padding="@dimen/padding_small"
                    android:text="Question 1 :"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/txtLarge" />

                <TextView
                    android:id="@+id/qts_survey_detail_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small"
                    android:gravity="left"
                    android:padding="@dimen/padding_small"
                    android:text="Who is the top goal scorer?"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/txtLarge" />


                <ListView
                    android:id="@+id/choicesListviewOne"
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:layout_gravity="center_horizontal"
                    android:choiceMode="singleChoice"
                    android:divider="@null"></ListView>

                <com.orgware.polling.utils.piegraph.PieGraph
                    android:id="@+id/piegraphOne"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/margin_small"
                    android:layout_weight="1"
                    app:pieInnerCircleRatio="128"
                    app:pieSlicePadding="0dp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_survey_detail_qts_two"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_small"
                android:background="@android:color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_qts_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small"
                    android:gravity="left"
                    android:padding="@dimen/padding_small"
                    android:text="Question 2 :"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/txtLarge" />

                <TextView
                    android:id="@+id/qts_survey_detail_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small"
                    android:gravity="left"
                    android:padding="@dimen/padding_small"
                    android:text="Who is the top goal scorer?"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/txtLarge" />

                <ListView
                    android:id="@+id/choicesListviewTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:layout_gravity="center_horizontal"
                    android:choiceMode="singleChoice"
                    android:divider="@null"></ListView>

                <com.orgware.polling.utils.piegraph.PieGraph
                    android:id="@+id/piegraphTwo"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/margin_small"
                    android:layout_weight="1"
                    app:pieInnerCircleRatio="128"
                    app:pieSlicePadding="0dp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_survey_detail_qts_three"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_small"
                android:background="@android:color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_qts_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small"
                    android:gravity="left"
                    android:padding="@dimen/padding_small"
                    android:text="Question 3 :"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/txtLarge" />

                <TextView
                    android:id="@+id/qts_survey_detail_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_small"
                    android:gravity="left"
                    android:padding="@dimen/padding_small"
                    android:text="Who is the top goal scorer?"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/txtLarge" />

                <ListView
                    android:id="@+id/choicesListviewThree"
                    android:layout_width="wrap_content"
                    android:layout_height="250dp"
                    android:layout_gravity="center_horizontal"
                    android:choiceMode="singleChoice"
                    android:divider="@null"></ListView>

                <com.orgware.polling.utils.piegraph.PieGraph
                    android:id="@+id/piegraphThree"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/margin_small"
                    android:layout_weight="1"
                    app:pieInnerCircleRatio="128"
                    app:pieSlicePadding="0dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layout_survey_detail_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/home_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_submit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/home_bg"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_submit"
            android:padding="8dp"
            android:text="SUBMIT"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>