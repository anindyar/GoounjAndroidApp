<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/search_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/padding_normal"
        android:src="@drawable/rotate_arrow_toright"
        android:tint="@color/home_bg" />

    <EditText
        android:id="@+id/search_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/search_close"
        android:layout_toRightOf="@+id/search_back"
        android:background="@null"
        android:gravity="center_vertical|left"
        android:hint="Search"
        android:padding="@dimen/padding_normal"
        android:textSize="@dimen/txtNormal" />


    <ImageView
        android:id="@+id/search_close"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:padding="@dimen/padding_normal"
        android:src="@drawable/ic_close_search"
        android:tint="@color/home_bg" />

</RelativeLayout>