<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/padding_small">

    <ImageView
        android:id="@+id/candidate_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name"
        android:padding="@dimen/padding_small"
        android:src="@drawable/ic_usericon_orange" />

    <TextView
        android:id="@+id/candidate_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/candidate_icon"
        android:text="@string/app_name"
        android:textColor="@color/home_bg"
        android:textSize="@dimen/txtNormal"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/candidate_content"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/candidate_name"
        android:layout_toLeftOf="@+id/candidate_detail_view"
        android:layout_toRightOf="@+id/candidate_icon"
        android:ellipsize="end"
        android:maxLength="40"
        android:padding="@dimen/padding_small"
        android:text="@string/loream_ipsum"
        android:textColor="@color/home_bg"
        android:textSize="@dimen/txtNormal"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/candidate_detail_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_candidate_view" />

    <ImageView
        android:id="@+id/candidate_vote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/candidate_detail_view"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_candidate_vote" />

</RelativeLayout>