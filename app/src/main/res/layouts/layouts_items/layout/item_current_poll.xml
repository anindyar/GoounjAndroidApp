<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_normal">

        <ImageView
            android:id="@+id/poll_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:paddingRight="@dimen/padding_small"
            android:src="@drawable/ic_usericon_blue" />

        <TextView
            android:id="@+id/poll_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/poll_image"
            android:padding="3dp"
            android:text="Weekend Movie"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/poll_createdBy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/poll_title"
            android:layout_toRightOf="@+id/poll_image"
            android:padding="2dp"
            android:text="Created By:"
            android:textColor="@color/bg" />

        <TextView
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/poll_createdBy"
            android:layout_toRightOf="@+id/poll_image"
            android:padding="3dp"
            android:text="START ON :"
            android:textColor="@color/home_bg" />

        <TextView
            android:id="@+id/poll_startDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/poll_createdBy"
            android:layout_toRightOf="@+id/start"
            android:padding="3dp"
            android:text="03:00 PM,23 NOV 2015"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/start"
            android:layout_toRightOf="@+id/poll_image"
            android:padding="3dp"
            android:text="ENDS ON :"
            android:textColor="@color/home_bg" />

        <TextView
            android:id="@+id/poll_endDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/poll_startDate"
            android:layout_toRightOf="@+id/start"
            android:padding="3dp"
            android:text="03:00 PM,23 NOV 2015"
            android:textColor="@color/colorPrimary" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/logo_right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_image" />

            <ImageView
                android:id="@+id/logo_statistics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/stats"
                android:visibility="gone" />

        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@android:color/black" />


</LinearLayout>