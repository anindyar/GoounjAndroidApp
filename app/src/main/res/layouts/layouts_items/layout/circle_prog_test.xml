                        android:button="@drawable/selector_radio_checked_bg"
                        android:padding="@dimen/padding_small"
                        android:text="Suarez"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="@dimen/txtNormal"></RadioButton>
                </RadioGroup>
            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:padding="@dimen/padding_small">

                <com.bvocal.goounj.utils.CircularProg
                    android:id="@+id/first_circular_progressbar"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    app:background_progressbar_color="@android:color/transparent"
                    app:background_progressbar_width="0dp"
                    app:progressbar_color="@color/bg"
                    app:progressbar_width="50dp" />

